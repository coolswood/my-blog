---
import { changeLanguage } from "i18next";

changeLanguage("ru");

export async function getStaticPaths() {
    const posts = await Astro.glob("/src/posts/**/*.{md,mdx}");
    return posts.map((post) => ({
        params: {
            slug: post.frontmatter.slug,
        },
        props: {
            post,
        },
    }));
}
const { Content } = Astro.props.post;
---

<Content />
